# Configuración para el sistema de liquidación de nómina

# Activar motor de reescritura
RewriteEngine On

# Evitar acceso directo a archivos sensibles
<Files ~ "\.(sql|log|md)$">
    Order allow,deny
    Deny from all
</Files>

# Regla general para módulos (si no coincide con reglas específicas)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9_-]+)/?$ index.php?module=$1 [L,QSA]

# Página por defecto
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule .? index.php [L]